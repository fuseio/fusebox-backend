    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Debug: Charge API",
            "remoteRoot": "/usr/src/app",
            "localRoot": "${workspaceFolder}",
            "port": 9227,
            "restart": true,
            "address": "0.0.0.0",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug: Charge Network",
            "remoteRoot": "/usr/src/app",
            "localRoot": "${workspaceFolder}",
            "port": 9225,
            "restart": true,
            "address": "0.0.0.0",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug: Charge Notifications",
            "remoteRoot": "/usr/src/app",
            "localRoot": "${workspaceFolder}",
            "port": 9230,
            "restart": true,
            "address": "0.0.0.0",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug: Charge Apps",
            "remoteRoot": "/usr/src/app",
            "localRoot": "${workspaceFolder}",
            "port": 9231,
            "restart": true,
            "address": "0.0.0.0",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug: Charge Accounts",
            "remoteRoot": "/usr/src/app",
            "localRoot": "${workspaceFolder}",
            "port": 9229,
            "restart": true,
            "address": "0.0.0.0",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug: Charge Smart Wallets",
            "remoteRoot": "/usr/src/app",
            "localRoot": "${workspaceFolder}",
            "port": 9232,
            "restart": true,
            "address": "0.0.0.0",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Nest Framework",
            "args": [
                "${workspaceFolder}/src/main.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "sourceMaps": true,
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
        },  
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/auth/jwt.strategy.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Auth Testing",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "./scripts/smartWalletsAuthTesting.ts",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "run-auth-testing-debug", "--preserve-symlinks"]
        },
        {
            "name": "charge-notifications-service",
            "command": "npm run start:dev charge-notifications-service",
            "request": "launch",
            "type": "node-terminal",
            "remoteRoot": "/usr/src/app",
            "localRoot": "${workspaceFolder}",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Nest Framework",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
            "run",
            "start:debug"
            ],
            "autoAttachChildProcesses": true,
            "restart": true,
            "sourceMaps": true,
            "stopOnEntry": false,
            "console": "integratedTerminal",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Nest Debug",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
              "run",
              "start:debug",
              "--",
              "--inspect-brk"
            ],
            "console": "integratedTerminal",
            "restart": true,
            "protocol": "auto",
            "port": 9229,
            "autoAttachChildProcesses": true
          }
    ]
}