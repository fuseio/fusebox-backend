{
  "name": "charge-backend",
  "version": "0.0.1",
  "description": "Fuse Charge Backend",
  "author": "Maor Stamati <maor@fuse.io>",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=8",
    "yarn": "*"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build charge-accounts-service && nest build charge-api-service && nest build charge-notifications-service && nest build charge-network-service && nest build charge-apps-service && nest build charge-smart-wallets-service && nest build charge-relay-service",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start $npm_config_service --debug 0.0.0.0:$npm_config_port --watch",
    "start:prod": "node dist/apps/$npm_config_service/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "run-auth-testing-debug": "npx ts-node -e 'require(\"./scripts/smartWalletsAuthTesting.ts\").getHashAndSig(\"PRIVATE_KEY\")'",
    "run-validate-signature": "npx ts-node -e 'require(\"./scripts/smartWalletsAuthTesting.ts\").isValidSignature(\"SIGNING_ADDRESS\", \"MESSAGE\", \"SIGNATURE\")'",
    "test": "jest --config ./jest.config.ts",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/charge-accounts-service/test/jest-e2e.json",
    "documentation:serve": "npx @compodoc/compodoc -p tsconfig.json --serve",
    "docker:staging": "docker-compose -f docker-compose.yml -f docker-compose.staging.yml up -d",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:debug": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml -f docker-compose.debug.yml up",
    "docker:full-debug": "docker-compose -f docker-compose.yml -f docker-compose.full-dev.yml -f docker-compose.debug.yml up"
  },
  "dependencies": {
    "@compodoc/compodoc": "^1.1.19",
    "@fuseio/fusebox-web-sdk": "^0.1.2",
    "@liaoliaots/nestjs-redis": "^8.2.2",
    "@nestjs/axios": "0.0.8",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.0.1",
    "@nestjs/core": "^8.0.0",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^8.4.5",
    "@nestjs/mongoose": "^9.2.1",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.0.0",
    "axios": "^0.27.2",
    "base64url": "^3.0.1",
    "bcryptjs": "^2.4.3",
    "centrifuge": "^3.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "crypto-js": "^4.1.1",
    "date-fns": "^2.29.2",
    "dotenv": "^16.0.0",
    "ethereumjs-util": "^7.1.5",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "^5.7.2",
    "form-data": "^4.0.0",
    "graphql": "^16.6.0",
    "graphql-request": "^5.0.0",
    "helmet": "^5.0.2",
    "ioredis": "^5.2.0",
    "json-rpc-2.0": "^1.6.0",
    "jwks-rsa": "^2.1.0",
    "jwt-decode": "^4.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^6.10.2",
    "mongoose-paginate-v2": "^1.7.31",
    "nestjs-ethers": "^1.0.3",
    "passport": "^0.5.3",
    "passport-jwt": "^4.0.1",
    "perf_hooks": "^0.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "userop": "^0.3.1",
    "web3": "^1.7.4",
    "ws": "^8.12.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/base64url": "^2.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/jest": "27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.0.0",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "chai": "^4.3.7",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/",
      "<rootDir>/scripts/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  }
}