{
  "name": "fusebox-backend",
  "version": "0.0.1",
  "description": "FuseBox Backend",
  "author": "Maor Stamati <maor@fuse.io>",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=8",
    "yarn": "*"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build charge-accounts-service && nest build charge-api-service && nest build charge-notifications-service && nest build charge-network-service && nest build charge-apps-service && nest build charge-smart-wallets-service && nest build charge-relay-service",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start $npm_config_service --debug 0.0.0.0:$npm_config_port --watch",
    "start:prod": "node dist/apps/$npm_config_service/main",
    "lint": "eslint \"{src,apps,libs,tests,scripts}/**/*.ts\" --fix",
    "run-auth-testing-debug": "npx ts-node -e 'require(\"./scripts/smartWalletsAuthTesting.ts\").getHashAndSig(\"PRIVATE_KEY\")'",
    "run-validate-signature": "npx ts-node -e 'require(\"./scripts/smartWalletsAuthTesting.ts\").isValidSignature(\"SIGNING_ADDRESS\", \"MESSAGE\", \"SIGNATURE\")'",
    "test": "jest --config ./jest.config.ts",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/charge-accounts-service/test/jest-e2e.json",
    "documentation:serve": "npx @compodoc/compodoc -p tsconfig.json --serve",
    "docker:staging": "docker-compose -f docker-compose.yml -f docker-compose.staging.yml up -d",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:debug": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml -f docker-compose.debug.yml up",
    "docker:full-debug": "docker-compose -f docker-compose.yml -f docker-compose.full-dev.yml -f docker-compose.debug.yml up"
  },
  "dependencies": {
    "@amplitude/analytics-node": "^1.3.5",
    "@compodoc/compodoc": "^1.1.23",
    "@fuseio/fusebox-web-sdk": "^0.3.4",
    "@nestjs/axios": "3.0.2",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.3.7",
    "@nestjs/config": "^3.2.1",
    "@nestjs/core": "^10.3.7",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^10.3.7",
    "@nestjs/mongoose": "^10.0.4",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.7",
    "axios": "^1.6.8",
    "base64url": "^3.0.1",
    "bcryptjs": "^2.4.3",
    "cache-manager": "^5.4.0",
    "cent.js": "^5.0.0",
    "centrifuge": "^5.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "ethereumjs-util": "^7.1.5",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "^5.7.2",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "helmet": "^7.1.0",
    "json-rpc-2.0": "^1.7.0",
    "jwks-rsa": "^3.1.0",
    "jwt-decode": "^4.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^8.2.4",
    "mongoose-paginate-v2": "^1.8.0",
    "nestjs-ethers": "^1.0.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "perf_hooks": "^0.0.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "web3": "^4.7.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.7",
    "@types/base64url": "^2.0.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "29.5.12",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.12.3",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "chai": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/",
      "<rootDir>/scripts/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  }
}
